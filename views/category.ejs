<%- include('partials/header') %>
<h1>Articles dans la catégorie <%= category %></h1>
<% articles.map(article => { %>
  <article class="post pure-u-1 pure-u-md-1 pure-u-lg-1-2 pure-u-xl-1-3">
    <div class="post-content post--category-histoire"
    style="background-image: url(<%= article.img %>)">
      <header class="post-header">
        <h2 class="post-title">
          <a href="/post/<%= article.id %>">
            <%= article.title %>
          </a>
        </h2>
        <span class="post-image-caption">
          <%= article.sub_title %>
        </span>
  
        <p class="post-meta">
          Par<a class="post-author" href="/author/<%= article.author.replace(' ', '-').toLowerCase() %>"><%= article.author %></a> dans la catégorie <a
            class="post-category post-category-technologies" href="/category/<%= article.category.toLowerCase() %>"><%= article.category %></a>
        </p>
      </header>
      <main class="post-summary">
        <p>
          <% for(i = 0; i <= 30; i++) { %>
            <%= article.text.split(' ')[i] %>
          <% } %>
          <a
            href="/post/<%= article.id %>">
            [lire plus…]
          </a>
        </p>
      </main>
    </div>
  </article>
<% }) %>
<%- include('partials/footer') %>